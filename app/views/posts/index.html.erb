<h1 class="index-header">List of all the Posted Notes</h1>

<%= form_tag posts_path, :html => {class: "form-horizontal", role: "form"}, :method => 'get' do %>
	<div class="form-group">
			<%= text_field_tag :search, params[:search], id: "search-form", class: "form-control", placeholder: "Type Title Here" %>
			<%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
	</div>
<% end %>

<%= render 'posts', obj: @posts %>

<div align="center">
    <%= will_paginate %>
</div>
