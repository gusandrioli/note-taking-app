<%= div_for(answer) do %>
	<div class="comments_wrapper clearfix">
		<div class="pull-left">
			<p class="lead"><%= answer.body %></p>
			<p><small>Submitted <strong><%= time_ago_in_words(answer.created_at) %> ago</strong> by <%= answer.user.full_name %></small></p>
		</div>

		<div class="btn-group pull-right">
			<% if answer.user == current_user || current_user.admin? -%>
				<%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-default" %>
			<% end %>
		</div>
	</div>
<% end %>
